generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id         String       @id @default(uuid())
  name       String
  users      User[]
  domains    Domain[]
  createdAt  DateTime     @default(now())
  Invitation Invitation[]
}

// 2. 사용자
model User {
  id              String         @id @default(uuid())
  email           String         @unique
  passwordHash    String
  role            Role           @default(MANAGER)
  status          UserStatus     @default(PENDING)
  name            String?
  organizationId  String
  organization    Organization   @relation(fields: [organizationId], references: [id])
  createdAt       DateTime       @default(now())
  Conversation    Conversation[]
  sentInvitations Invitation[]   @relation("InvitedBy")
  RefreshToken    RefreshToken[]
}

// 7. 사용자
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

enum Role {
  ADMIN // 최고관리자
  AGENT // 회사관리자
  MANAGER
}

enum UserStatus {
  PENDING // 승인 대기 
  ACTIVE // 활성화
  INACTIVED // 비활성화 (로그인 불가)
}

// 5. 사용자 초대 
model Invitation {
  id         String  @id @default(uuid())
  email      String  @unique
  name       String?
  role       Role    @default(MANAGER) // 초대 시 부여할 역할
  isAccepted Boolean @default(false)

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  invitedById String
  invitedBy   User   @relation("InvitedBy", fields: [invitedById], references: [id])

  createdAt DateTime @default(now())
}

// 3. 도메인
model Domain {
  id             String         @id @default(uuid())
  domainUrl      String         @unique
  siteKey        String         @unique @default(uuid())
  isActive       Boolean        @default(true)
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime       @default(now())
  Conversation   Conversation[]
}

// 6. 채팅 방문자 식별
model Visitor {
  id    String  @id @default(uuid())
  email String  @unique
  name  String? @default("Guest")

  Conversation Conversation[]
  createdAt    DateTime       @default(now())
}

// 4. 채팅방 
model Conversation {
  id     String             @id @default(uuid())
  status ConversationStatus @default(OPEN)

  // 어느 도메인(사이트)에서 발생한 채팅인가
  domainId String
  domain   Domain @relation(fields: [domainId], references: [id])

  // 어떤 상담원이 담당하고 있는가 (처음엔 없을 수 있음)
  assignedUserId String?
  assignedUser   User?   @relation(fields: [assignedUserId], references: [id])

  // 방문자 정보
  visitorId String
  visitor   Visitor @relation(fields: [visitorId], references: [id])

  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum ConversationStatus {
  OPEN
  CLOSED
}

// 5. 채팅 메시지
model Message {
  id      String @id @default(uuid())
  content String @db.Text // 긴 텍스트 대응

  // 누가 보냈는가?
  senderType SenderType
  senderId   String

  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  createdAt DateTime @default(now())
}

enum SenderType {
  VISITOR
  USER
}
